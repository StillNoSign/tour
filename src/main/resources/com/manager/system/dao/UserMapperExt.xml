<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.manager.system.dao.UserMapper">

    <select id="selectUserByUserId" parameterType="String" resultMap="BaseResultMap">

    select * from SS01 where USER_ID = #{userId,jdbcType=VARCHAR}
  </select>

    <select id="selectUserManagerList"
            parameterType="com.manager.entry.system.UserManagerQuery"
            resultMap="UserManagerResult">

        select t1.USER_ID,
        t1.SS01_ID,
        t1.USER_NAME,
        t1.STATUS,
        t2.USER_ROLE_ID,
        t3.USER_ROLE_NAME,
        t4.OP_UNIT,
        t5.PROJECT_NO,
        t5.PROJECT_NAME,
        t5.PROJECT_NAME_J
        from SS01 t1
        left join SS0101 t2
        on t1.SS01_ID = t2.SS01_ID
        left join SS02 t3
        on t3.USER_ROLE_ID = t2.USER_ROLE_ID
        left join SS0102 t4
        on t1.SS01_ID = t4.SS01_ID
        left join SC02 t5
        on t5.PROJECT_NO = t4.PROJECT_NO
        <where>
            1 = 1
            <if test="status != null">
                and t1.STATUS = #{status,jdbcType=VARCHAR}
            </if>
            <if test="userName != null">
                and t1.USER_NAME like CONCAT('%', #{userName,jdbcType=VARCHAR}, '%')
            </if>
            <if test="projectNo != null">
                and t5.PROJECT_NO = #{status,jdbcType=VARCHAR}
            </if>
            <if test="userRoleId != null">
                and t2.USER_ROLE_ID = #{userRoleId,jdbcType=VARCHAR}
            </if>
        </where>
        order by t1.CREATE_TIME
    </select>

    <resultMap id="UserManagerResult" type="com.manager.entry.system.UserManager">
        <id column="SS01_id" property="ss01Id" jdbcType="VARCHAR"></id>
        <result column="USER_NAME" property="userName" jdbcType="VARCHAR"></result>
        <result column="STATUS" property="status" jdbcType="VARCHAR"></result>
        <result column="USER_ROLE_ID" property="userRoleId" jdbcType="VARCHAR"></result>
        <result column="USER_ROLE_NAME" property="userRoleName" jdbcType="VARCHAR"></result>
        <result column="OP_UNIT" property="opUnit" jdbcType="VARCHAR"></result>
        <result column="PROJECT_NO" property="projectNo" jdbcType="VARCHAR"></result>
        <result column="PROJECT_NAME" property="projectName" jdbcType="VARCHAR"></result>
        <result column="PROJECT_NAME_J" property="projectNameJ" jdbcType="VARCHAR"></result>
    </resultMap>
</mapper>